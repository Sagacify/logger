{
  "name": "saga-logger",
  "version": "4.0.1",
  "description": "A basic Logger object that force a logging format, can use logentries",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint --fix './src'",
    "test:lint": "eslint -f stylish 'src/**/*.ts'",
    "test:types": "tsc --noEmit",
    "test:spec": "env NODE_ENV=test mocha .",
    "test:cover": "nyc npm run test:spec",
    "test:watch": "env NODE_ENV=test mocha --watch",
    "test": "npm run test:lint && npm run test:types && npm run test:cover"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sagacify/logger.git"
  },
  "keywords": [
    "log",
    "logger"
  ],
  "author": "Louis Borsu <louis@sagacify.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Sagacify/logger/issues"
  },
  "homepage": "https://github.com/Sagacify/logger#readme",
  "engines": {
    "node": ">=12.22.6"
  },
  "dependencies": {
    "pino": "^6.13.1",
    "pino-pretty": "^6.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.10",
    "@types/pino": "^6.3.11",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-semistandard": "^16.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "intercept-stdout": "^0.1.2",
    "lodash": "^4.17.21",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "sinon": "^11.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "semistandard",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "mocha": {
    "require": "ts-node/register",
    "spec": [
      "test/**/*.ts"
    ],
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "semi": true,
    "arrowParens": "always"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
